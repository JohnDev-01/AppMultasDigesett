<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMultasDigesett.Vistas.DetalleMulta"
             Title="">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15">
            <!-- T铆tulo -->
            <Label Text="Detalles de la Multa"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Green" />
            <!-- Tarjeta de informaci贸n -->
            <Frame Padding="15"
                   CornerRadius="12"
                   BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="LightGray">
                <Grid RowSpacing="8">
                    <!-- Placa -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackLayout  Grid.Row="0">
                        <Label Text=" Placa:"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        <Label x:Name="PlacaLabel"
                               TextColor="#555" />
                    </StackLayout>
                    <StackLayout Grid.Row="1">
                        <Label Text="锔 Infracci贸n:"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        <Label x:Name="InfraccionLabel"
                               TextColor="#555" />
                    </StackLayout>
                    <StackLayout  Grid.Row="2">
                        <Label Text=" Fecha y Hora:"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        <Label x:Name="FechaHoraLabel"
                               TextColor="#555" />
                    </StackLayout>
                    <StackLayout  Grid.Row="3">
                        <Label Text=" Descripci贸n:"
                               FontAttributes="Bold"
                               TextColor="#333" />
                        <Label x:Name="DescripcionLabel"
                               TextColor="#555" />
                    </StackLayout>
                </Grid>
            </Frame>
            <!-- Imagen del veh铆culo o infracci贸n -->
           
                <Image x:Name="FotoImage"
                       HeightRequest="250"
                       HorizontalOptions="Center" />
           
            <!-- Bot贸n para reproducir audio -->
            <Button Text=" Reproducir Audio"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="OnPlayAudioClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>